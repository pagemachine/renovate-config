{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["local>pagemachine/renovate-config"],
  "packageRules": [
    {
      "matchDepTypes": [
        "require"
      ],
      "matchDepNames": [
        "jangregor/phpstan-prophecy",
        "phpstan/**",
        "phpunit/phpunit",
        "rector/rector",
        "saschaegerer/phpstan-typo3",
        "ssch/typo3-rector",
        "typo3/coding-standards",
        "typo3/testing-framework"
      ],
      "rangeStrategy": "widen"
    }
  ]
}
